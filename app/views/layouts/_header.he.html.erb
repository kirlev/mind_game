<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Brain Tracker", root_path, id: "logo" %>
      <nav>
        <p id='locale_set'>
          <%= link_to_unless I18n.locale == :en, "English", set_language_english_path %>
          |
          <%= link_to_unless I18n.locale == :he, "עברית", set_language_hebrew_path %>
        </p>
        <ul class="nav pull-right">
          <li><%= link_to "דף הבית", root_path %></li>
          <li><%= link_to "עזרה", help_path %></li>
          <li><%= link_to "משחקים", games_path %></li>
          <% if signed_in? %>
            
                <li><%= link_to "עמוד פרופיל", user_path(current_user) %></li>
                <li><%= link_to "הגדרות", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "התנתק", signout_path, method: "delete" %>
                </li>
    
          <% else %>
            <li><%= link_to "התחבר", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
