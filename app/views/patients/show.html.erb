
<h1><center>Hello <%= @patient.full_name %></center></h1>
<div>
	<h3><b>Assignments</b></h3><br/>
		<% unless @games.nil? %>
		<ul>
			<% @games.each do |game| %>
            	<%= link_to game.name, game_path(game) %>
        		</br>
        	<% end %>
	</ul>
	<section id="instruction_details">
		<h5><u>Instructions</u>: </h5><p><%= @instruction_details %></p>
	</section>
		<% else %>
			<p>There are no assignments </p>
		<% end %>
	<hr>
	<p>for all the games go to <%= link_to "games page", games_path %></p>