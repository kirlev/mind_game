<% provide(:title, 'All patients') %>
<h1>All patients</h1>

<%= will_paginate @patients%>
<ul class="users">
  <% @patients.each do |patient| %>
    <li>
      <b>
        <%= link_to patient.full_name, show_details_to_therapist_patient_path(patient) %>
      </b>
      <% if current_user.admin? && !current_user?(patient) %>
      <%= link_to "delete patient", patient, method: :delete, 
  									data: { confirm: "You sure?" } %>
  	  <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate @patients%>