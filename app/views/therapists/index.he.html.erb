<% provide(:title, 'רשימת המטפלים') %>
<h1>רשימת המטפלים</h1>

<%= will_paginate @therapists, :previous_label => "הקודם", :next_label => "הבא" %>
<ul class="users">
  <% @therapists.each do |therapist| %>
    <li>
      <b>
      	<%= link_to therapist.full_name, therapist %>
  	  </b>
      <% if current_user.admin? && !current_user?(therapist) %>
      <%= link_to "delete therapist", therapist, method: :delete, 
  									data: { confirm: "אתה בטוח?" } %>
  	  <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate @therapists, :previous_label => "הקודם", :next_label => "הבא" %>
