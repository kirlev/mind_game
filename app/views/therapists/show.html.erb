<% provide(:title, @therapist.first_name) %>

<ul class="nav" >
    <%= @therapist.first_name %>, <%= @therapist.email %>
    <li><%= link_to "Add new patient", patient_signup_path( :patient =>
    				{ :therapist_id => @therapist.id.to_s }) %>
    </li>
</ul>
<div class="container">
  <%= will_paginate @patients%>
	<ul class="patients">
		<li class="divider"></li>
  		<% @patients.each do |patient| %>
    	<%= render :template => 'therapists/_patient', :locals => { :patient => patient }%>
  		<% end %>
	</ul>
    <%= will_paginate @patients%>
</div>